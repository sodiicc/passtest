  font-family 'Circe'
  font-weight normal
  src local('Circe'), url('../fonts/circe_regular.woff') format('woff')

@font-face
  font-family 'Circe'
  font-weight bold
  src local('Circe'), url('../fonts/circe_bold.woff') format('woff')

@font-face
  font-family 'Circe-light'
  src local('Circe'), url('../fonts/circe_extra_light.woff') format('woff')

