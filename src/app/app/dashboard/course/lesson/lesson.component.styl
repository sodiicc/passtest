@import '../../../../assets/styl/variables.styl'

@keyframes anchor-bg-animation {
  from {background-color: #ffdc00;}
  to {background-color: transparent;}
}

.anchor
  animation-name anchor-bg-animation
  animation-duration 3s

.player-container
  height 100%
  padding-bottom 180px

.player-controls
  height 180px
  padding 24px 0

.progress-dot
  overflow visible
  & > .progress-bar
    position relative
    height 5px
    &:after
      content ''
      width 15px
      height 15px
      display block
      background inherit
      position absolute
      margin-top -5px
      margin-right -7.5px
      right 0
      border-radius 100%

.progress-gray
  background-color rgba(0, 0, 0, 0.1)
  & > .progress-bar
    background-color #323232
    border-radius 5px

.player-buttons
  padding-top 10px
  padding-bottom 34px

.player-buttons
  .fa
    font-size 56px
    line-height 0.9
    color #363636

.player-cover
  padding 25px

.player-course
  p
    font-size 16px

.notification-bottom
  bottom 0

.notification-sm
  height 40px !important
  & > .notification-body
    padding 9px
    font-size 14px
