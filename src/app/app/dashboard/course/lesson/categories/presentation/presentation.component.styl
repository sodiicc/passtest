.icon-slide
  background transparent
  border-radius 100%
  width 50px
  height 50px
  position relative

.icon-slide-content
  position absolute
  top 0
  bottom 0
  color #363636
  margin auto 0
  display table
  text-align center
  width 100%
  font-size 24px
  padding-top 2px

.presentation-container
  height 100%
  padding-bottom 95px
  position relative

.presentation-controls
  height 95px
  padding 24px 0

.presentation-control
  font-size 33px
  margin-top 5px
  color #363636

.presentation-view-container
  overflow auto
  height 100%
  max-height 100%
  display block

.card-overlay
  width 100%
  background rgba(0, 0, 0, 0.52)
  background-color rgba(255, 255, 255, .9)
  position absolute
  z-index 2
  padding 15px 15px

.presentation-view-container
  position relative
  border-radius .25rem

.card-overlay-top
  top 0
  border-radius .25rem .25rem 0 0
  border-bottom 1px solid #ededed

.card-overlay-bottom
  bottom 0
  border-radius 0 0 .25rem .25rem

.container-fullscreen
  margin 0
  max-width 100%
  padding 0
  width 100%
  background #ededed
  z-index 9999999
  & > .presentation-container
    padding-top 0
    position relative
    padding-bottom 0
  .presentation-controls
    bottom 0
    padding-left 15px
    padding-right: 15px

.container-fullscreen .presentation-controls,
.presentation-title
  position fixed
  width 100%
  bottom 0
  background rgba(237, 237, 237, 0.73)
  left 0
  right 0
  z-index 2

.presentation-title
  position absolute
  padding 18px 25px
  display table
  top 79px
  bottom auto

.container-fullscreen .presentation-title
  position fixed !important
  top 0 !important

.presentation-overlay-control
  font-size 20px
  line-height 1.1

pdf-viewer,
.final-slide
  position relative
  display flex
  flex-direction column
  justify-content center

.ng2-pdf-viewer-container
  overflow-x hidden !important

@media only screen and (max-height: 375px)
  .presentation-title
    width auto
    left initial
  .pi-top-meta
    display none !important
  .presentation-controls
    height 65px
    padding 8px 0
  .presentation-container
    padding-bottom 65px


pinch-zoom
  height 100%
  overflow auto !important
  &>div
    min-height 100% !important
    height auto !important
  .presentation-view-container
    width 100% !important
  .pz-zoom-button
    display none !important

@media only screen and (max-width: 575px)
  .presentation-title
    padding 0 0 18px 0
  .container-fullscreen .presentation-title
    padding 15px 18px
  .presentation-title h4
    font-size 1.1rem