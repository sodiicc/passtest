.form-control-phone
  font-size 33px
  & > input
    border none
    background transparent
    text-align left
    color #ffffff
    position relative
    z-index 1
    outline 0
    padding 0

phone-input
  display table

.phone-input
  display table
  position relative

.input-phone-label
  font-size 33px
  margin-top 0
  margin-right 4px
  float left
  position relative
  z-index 1
  & > select
    background transparent
    border none
    -webkit-appearance none
    -moz-appearance none
    text-align-last center
    padding 0 !important
    & > option
      color black
      background transparent
      outline none
      font-size 26px
    &:focus
      outline none
      border none


.form-control-phone>input::-webkit-inner-spin-button,
.form-control-phone>input::-webkit-outer-spin-button
  -webkit-appearance none
  margin 0

.input-phone-2
  width 42px

.input-phone-3
  width 63px

.form-control-background
  position absolute
  top 0
  opacity 0.2
  z-index 0
  width 100%
  left 0
  padding inherit
  &>input
    color #00547b !important

.form-phone-xl
  line-height inherit !important
  select
    color #1a483d !important

@media only screen and (max-width: 374px)
  .form-control-transparent, .form-control-phone, .input-phone-label
    font-size 28px !important
  .input-phone-2
    width 37px !important
  .input-phone-3
    width 55px !important

@media only screen and (min-width: 450px)
  .form-phone-xl
    line-height 1.3 !important
    input, select
      font-size 54px
    .input-phone-3
      width 93px
    .input-phone-2
      width 63px
